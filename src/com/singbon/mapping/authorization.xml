<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.singbon.dao.systemManager.AuthorizationDAO">
	<resultMap id="group" type="com.singbon.entity.AuthGroup">
	</resultMap>
	<parameterMap type="com.singbon.entity.AuthGroup" id="group2"></parameterMap>
	<resultMap id="userGroup" type="com.singbon.entity.AuthUserGroup">
	</resultMap>
	<parameterMap type="com.singbon.entity.AuthUserGroup" id="userGroup2"></parameterMap>
	<select id="selectGroup" resultMap="group">
		select * from authGroup where
		companyId=#{companyId}
	</select>
	<insert id="insertGroup" parameterMap="group2">
		insert into authGroup
		(companyId,groupName,remark,roles) values (#{companyId},#{groupName},#{remark},#{roles})
	</insert>
	<update id="updateGroup" parameterMap="group2">
		update authGroup set
		groupName=#{groupName},remark=#{remark},roles=#{roles} where id=#{id}
	</update>
	<select id="selectGroupUserCount" resultType="java.lang.Integer">
		select count(*) from authUserGroup where groupId=#{groupId}
	</select>
	
	<update id="deleteGroup">
		delete from authGroup where id=#{id}
	</update>
	
	<select id="selectUserGroupList" resultType="java.util.Map">
		select s.id,s.loginName,GROUP_CONCAT(a.groupid) groupIds from sysuser s left join authusergroup a on s.id=a.userId where
		companyId=#{companyId} group by s.id
	</select>

	<insert id="insertUserGroup" parameterMap="userGroup2">
		insert into authUserGroup (userId,groupId) values 
		<foreach collection="list" item="item" index="index" separator=",">  
    		(#{item.userId},#{item.groupId})
		</foreach>
	</insert>

	<delete id="deleteUserGroup">
		delete from authUserGroup where userId=#{userId}
	</delete>
</mapper>