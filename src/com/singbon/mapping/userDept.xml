<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.singbon.dao.systemManager.systemSetting.UserDeptDAO">
	<resultMap id="userDept" type="com.singbon.entity.UserDept">
	</resultMap>
	<parameterMap type="com.singbon.entity.UserDept" id="userDept2" />
	<insert id="insert" parameterMap="userDept2">
		insert into userDept (companyId,deptName,parentId,batchId)
		values (#{companyId},#{deptName},#{parentId},#{batchId})
	</insert>
	<update id="update" parameterMap="userDept2">
		update userDept set deptName=#{deptName},batchId=#{batchId}
		where id=#{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from userDept where id=#{0}
	</delete>
	<select id="selectById" resultMap="userDept">
		select * from userDept where id=#{id}
	</select>
	<select id="selectByParentId" resultType="java.util.HashMap">
		select deptName,batchName,beginDate,endDate,invalidDate from userDept d,batch b where d.parentId=#{parentId}
		and d.batchId=b.id
	</select>
	<select id="selectTreeList" resultMap="userDept">
		select * from userDept where companyId=#{companyId}
	</select>
</mapper>