<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.singbon.dao.system.CompanyDAO">
	<resultMap id="company" type="com.singbon.entity.Company">
	</resultMap>
	<parameterMap type="com.singbon.entity.Company" id="company2" />
	
	<select id="selectById" resultMap="company">
		select * from company where id=#{id}
	</select>
	<update id="updateSystemPwd" parameterMap="company2">
		update company set companyName=#{companyName},serialNumber=#{serialNumber},authNumber=#{authNumber},baseSection=#{baseSection}
		where id=#{id}
	</update>
</mapper>